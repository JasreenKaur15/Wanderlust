<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label><br/>
            <input 
               name="listing[title]" 
               placeholder="Enter Title" 
               type="text" 
               class="form-control"
               required><br/>
               <div class="valid-feedback">Title look's good</div>
               <div class="invalid-feedback">Please enter title</div>
        </div>
        
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label><br/>
            <textarea name="listing[description]" class="form-control" required></textarea><br/>
            <div class="invalid-feedback">Please enter short description</div>
        </div>
        
        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label><br/>
            <input name="listing[image]" placeholder="Enter image url" type="text" class="form-control"><br/><br/>
        </div> -->

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label><br/>
            <input name="listing[image]"  type="file" class="form-control" required><br/><br/>
            
        </div>


        <div class="row">
            <div class="mb-3 col-4">
               <label for="price" class="form-label">Price</label><br/>
                <input name="listing[price]" placeholder="Enter price" type="number" required class="form-control"><br/>
                <div class="invalid-feedback">Please enter valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label><br/>
                <input name="listing[country]" placeholder="Enter Country" required="text" class="form-control"><br/>
                <div class="invalid-feedback">Please enter Country</div>
            </div>

        </div>
        
        
        <div class="ab-3">
            <label for="location" class="form-label">Location</label><br/>
            <input name="listing[location]" required placeholder="Enter Location" type="text" class="form-control"><br/>
            <div class="invalid-feedback">Please enter Location</div>
        </div>
    
       

        
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    </div>
</div>
<script src="/js/script.js"></script>